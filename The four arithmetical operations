public class Dörtİşlem {

	public static void main(String[] args) { // programın başladığını gösterir.
	
		int sayi_1, sayi_2,sonuc; 
		
		sayi_1 = 15; //sayıları default olarak aldık.
		sayi_2 = 20;
		
		sonuc=sayi_1+sayi_2; // Sırasıyla işlemler yapılıyor.
		System.out.println("1. işlemin sonucu= "+sonuc);// Ekrana sonucu yazdıran fonksiyon. 
		
		sonuc= sayi_1-sayi_2;
		System.out.println("2. işlemin sonucu= "+sonuc);
		
		sonuc=sayi_1*sayi_2;
		
		System.out.println("3.işlemin sonucu= "+sonuc);
	
		sonuc=sayi_2/sayi_1;
		System.out.println("4.işlemin sonucu= "+sonuc);
		
	}

}
